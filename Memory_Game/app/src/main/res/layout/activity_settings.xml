<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity"
    android:background="@color/colorBackground">

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="35dp"
        android:background="@drawable/string_back"
        android:onClick="btnBack" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/string_settings"
        android:textAlignment="center"
        android:layout_marginBottom="20dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/colorBackground3"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/string_level"/>

        <ImageButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/string_1_blue"
            android:tag="1"
            android:id="@+id/btnLevel1"
            android:onClick="btnLevel"/>
        <ImageButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/string_2_blue"
            android:tag="2"
            android:id="@+id/btnLevel2"
            android:onClick="btnLevel"/>
        <ImageButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/string_3_blue"
            android:tag="3"
            android:id="@+id/btnLevel3"
            android:onClick="btnLevel"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/colorBackground3"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/string_cards_view"
        android:layout_gravity="center"
        android:tag="cardsView"
        android:onClick="btnCardsView"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/colorBackground3"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/string_card_back_view"
        android:layout_gravity="center"
        android:tag="backCardView"
        android:onClick="btnCardsView"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/colorBackground3"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:id="@+id/bottomLayout">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/tranpirate"
            android:text="Logout"
            android:textSize="15dp"
            android:textAlignment="center"
            android:onClick="btnLogout"
            android:visibility="gone"
            android:id="@+id/btnLogout"/>
    </LinearLayout>

</LinearLayout>